{
  "name": "water-management-service",
  "version": "1.0.0",
  "description": "Backend service for water management",
  "main": "lib/index.js",
  "scripts": {
    "tsc": "tsc -p .",
    "start": "npm run build:live",
    "lint": "eslint --fix --ext .ts,.tsx src",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts)\"",
    "build": "npm run tsc",
    "build:live": "nodemon --watch \"src/**\" --watch \".env\" --ext \"ts\" --exec \"ts-node\" src/index.ts",
    "prepare": "husky",
    "test": "echo \"No tests defined\" && exit 0",
    "cspell": "cspell \"src/**/*.ts\""
  },
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/exelon-anix-innovation/anix-innovation-dashcam/bk-service.git"
  },
  "bugs": {
    "url": "https://gitlab.com/exelon-anix-innovation/anix-innovation-dashcam/bk-service/issues"
  },
  "homepage": "https://gitlab.com/exelon-anix-innovation/anix-innovation-dashcam/bk-service#readme",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "errorhandler": "^1.5.1",
    "express": "^5.2.1",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "india-states-districts": "^1.8.0",
    "indian-pincodes": "^1.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.22.1",
    "nodemailer": "^6.10.1",
    "pino": "^10.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uniqid": "^5.4.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/errorhandler": "^1.5.3",
    "@types/express": "^5.0.3",
    "@types/hpp": "^0.2.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.15",
    "@types/nodemailer": "^6.4.22",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uniqid": "^5.3.4",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "cspell": "^9.0.1",
    "eslint": "^9.31.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "{src}/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "cspell --no-must-find-files --no-progress"
    ]
  }
}